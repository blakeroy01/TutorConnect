<div class = "shadow">
	<div>
		<%= link_to image_tag("generic-profile-pic.png", class:"card-img-top"), root_path %>
	</div>
	<div class = "card-body">
		<h5 class= "card title text-center">
		<%=current_user.username%>
		</h5>
		<p class="card-text">
			<%=current_user.bio %>
		</p>

		<% if current_user.is_tutor %>
			<h5 class= "card title text-center"> Subjects </h5>
			<% current_user.subject.each do |element| %>
  		<li><%= element %></li>
			<% end %>
		<% end %>

		<% unless current_user.is_tutor == "false" %>
			<h5 class= "card title text-center"> Rate </h5>
			<div class = "card-text">
			<%= link_to 'Rate Past Tutors', rate_path %>
			</div>
		<% end %>
		


	</div>
</div>
